!Acessando o modo exec privilegiado
enable

	!Acessar modo de configuração global
	configure terminal
	
		!Acessando a Interface Física GigabitEthernet 0/0
		interface gigabitEthernet 0/0
			
			!Inicializando a Interface Física gigabitEthernet 0/0
			no shutdown
			exit

		!OBSERVAÇÃO IMPORTANTE: veja o arquivo 00-DocumentacaoDaRede.txt
		interface gigabitEthernet 0/0.20
			description Subinterface da VLAN de SVI do Switch Layer 3 3560
			encapsulation dot1Q 20
			ip address 172.16.20.254 255.255.255.0
			exit

		!Configurando a Subinterface da VLAN do Primeiro Usuário
		interface gigabitEthernet 0/0.21
			description Subinterface da VLAN do fernando
			encapsulation dot1Q 21
			ip address 172.16.21.254 255.255.255.0
			exit

		!Configurando a Subinterface da VLAN do Segundo Usuário
		interface gigabitEthernet 0/0.22
			description Subinterface da VLAN do gustavo
			encapsulation dot1Q 22
			ip address 172.16.22.254 255.255.255.0
			exit

		!Configurando a Subinterface da VLAN do Terceiro Usuário
		interface gigabitEthernet 0/0.23
			description Subinterface da VLAN do joao
			encapsulation dot1Q 23
			ip address 172.16.23.254 255.255.255.0
			exit

		!Configurando a Subinterface da VLAN do Quarto Usuário
		interface gigabitEthernet 0/0.24
			description Subinterface da VLAN do nicolas
			encapsulation dot1Q 24
			ip address 172.16.24.254 255.255.255.0
			exit

		!Configurando a Subinterface da VLAN Wireless
		interface gigabitEthernet 0/0.25
			description Subinterface da VLAN Wireless (backup)
			encapsulation dot1Q 25
			ip address 172.16.25.254 255.255.255.0
			end
	write
		
!Salvando as configurações do Switch
copy running-config startup-config

!Visualizando as configurações
show running-config
show ip interface brief
show ip route
show ip route connected
